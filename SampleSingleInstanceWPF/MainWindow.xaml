<Window x:Class="SampleSingleInstanceWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SampleSingleInstanceWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="500">
    <Grid>
        <TextBlock TextAlignment="Center" Padding="0,40,0,0">
            This sample demonstrates a single-instance application.<LineBreak/>
            <LineBreak/>
            Try to start another instance from File Explorer.<LineBreak/>
            <LineBreak/>
            It will not run; instead, the current window will be activated.
        </TextBlock>
    </Grid>
</Window>
